@model WebMvc.Models.Seller

@{
    ViewData["Title"] = "Delete";
}

<h2>@ViewData["Title"]</h2>

<h3>Are ou sure you want to delete this?</h3>

<div>
    <h4>Seller</h4>
    <hr>
    <dl class="dl-horizontal">
        <dt>
            Nome
        </dt>
        <dd>
            @Model.Name
        </dd>
        <dt>
            Email
        </dt>
        <dd>
            @Model.Email
        </dd>
        <dt>
            BirthDate
        </dt>
        <dd>
            @Model.BirthDate
        </dd>
        <dt>
            Base Salary
        </dt>
        <dd>
            @Model.BaseSalary
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id">
        <input type="submit" value="Delete" class="btn btn-danger">
        <a asp-action="Index">Back to List</a>
    </form>
</div>